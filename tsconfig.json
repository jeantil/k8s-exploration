{
  "include": ["**/src/**/*.ts"],
  "exclude": [],
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
