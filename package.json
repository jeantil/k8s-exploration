{
  "private": true,
  "workspaces": [
    "cruder",
    "pricer",
    "packages/*"
  ],
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "@k8s-demo-byjean/tooling": "*"
  },
  "scripts": {
    "build:cruder:prod": "yarn -cwd cruder build:prod",
    "build:pricer:prod": "yarn -cwd pricer build:prod",
    "build:cruder": "yarn -cwd cruder build",
    "build:pricer": "yarn -cwd pricer build",
    "lint": "eslint --ext js --ext ts --ext tsx --ext jsx",
    "postinstall": "husky install"
  }
}
